# Spring profile
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080

# DB (로컬 MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=routie
DB_USERNAME=root
DB_PASSWORD=1234

# JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# JWT (테스트용, 나중에 바꾸기)
JWT_SECRET=dev-secret-key-change
JWT_EXPIRATION=3600000   # 1시간 (ms 단위)

# AWS / 외부 API (필요 시만)
AWS_S3_BUCKET=
AWS_REGION=

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_COM_ROUTIE=DEBUG